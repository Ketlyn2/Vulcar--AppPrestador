<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/dark_blue">

    <RelativeLayout
        android:id="@+id/relative_layout_1"
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_id_loja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_id_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="jorge.re@gmail.com"
            android:visibility="gone"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_border_white_10dp"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/img_employee"
            android:src="@drawable/ic_profile"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/relative_layout_2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_employee"
            android:layout_toLeftOf="@id/txt_status">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jorge Henrique"
                android:textSize="16dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/semibold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_cpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="589.533.667-11"
                android:textSize="14dp"
                android:fontFamily="@font/light"
                android:layout_marginStart="15dp"
                android:layout_below="@id/txt_name"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_cpf"
                android:text="(11) 98299-2121"
                android:textSize="14dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/light"
                android:textColor="@color/white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Disponivel"
            android:textSize="14dp"
            android:textAllCaps="false"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_view_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative_layout_1"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:alpha="0.1"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/white"
        android:elevation="1dp" />

</RelativeLayout>