<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".Register2">


    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic__arrow_back" />

    <RelativeLayout
        android:id="@+id/relative_layout_1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="@drawable/car" />

        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_1"
            android:fontFamily="@font/bold"
            android:text="Agora"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_1"
            android:layout_marginTop="-8dp"
            android:fontFamily="@font/regular"
            android:text="Digite o seu endereço, por favor!"
            android:textColor="@color/clear_blue"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edt_endereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_2"
            android:layout_marginTop="15dp"
            android:background="@drawable/textbox"
            android:fontFamily="@font/regular"
            android:hint="Endereço"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edt_complemento"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_endereco"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/textbox"
            android:fontFamily="@font/regular"
            android:hint="Complemento"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edt_num"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_endereco"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/edt_complemento"
            android:background="@drawable/textbox"
            android:fontFamily="@font/regular"
            android:hint="Nº"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edt_bairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_complemento"
            android:layout_marginTop="15dp"
            android:background="@drawable/textbox"
            android:fontFamily="@font/regular"
            android:hint="Bairro"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edt_cidade"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_bairro"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/textbox"
            android:fontFamily="@font/regular"
            android:hint="Cidade"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edt_uf"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_bairro"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/edt_cidade"
            android:background="@drawable/textbox"
            android:fontFamily="@font/regular"
            android:hint="UF"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edt_cep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_cidade"
            android:layout_marginTop="15dp"
            android:background="@drawable/textbox"
            android:fontFamily="@font/regular"
            android:hint="CEP"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/edt_cep"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_blue"
            android:backgroundTint="@color/clear_blue"
            android:fontFamily="@font/bold"
            android:text="Cadastrar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="Já possui uma conta?"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/bold"
            android:text="Clique aqui"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>

</RelativeLayout>