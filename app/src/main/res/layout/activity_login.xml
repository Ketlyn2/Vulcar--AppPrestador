<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="@drawable/car" />

        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view_1"
            android:fontFamily="@font/bold"
            android:text="Bem vindo"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="45dp" />

        <TextView
            android:id="@+id/text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_1"
            android:layout_marginTop="-8dp"
            android:fontFamily="@font/regular"
            android:text="Faça seu login para continuar"
            android:textColor="@color/clear_blue"
            android:textSize="18dp"/>


        <!-- Área login empresa -->
        <RelativeLayout
            android:id="@+id/relative_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_2"
            android:visibility="gone">

                <EditText
                    android:id="@+id/edit_cnpj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/textbox"
                    android:fontFamily="@font/regular"
                    android:hint="CNPJ"
                    android:inputType="text"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_cnpj"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/textbox"
                    android:fontFamily="@font/regular"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="20dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_login_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_password"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_blue"
                    android:backgroundTint="@color/clear_blue"
                    android:fontFamily="@font/bold"
                    android:padding="10dp"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>


        </RelativeLayout>



        <!-- Área login funcionário -->
        <RelativeLayout
            android:id="@+id/relative_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_2">

            <EditText
                android:id="@+id/edit_cpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/textbox"
                android:fontFamily="@font/regular"
                android:hint="CPF"
                android:inputType="text"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/edit_password_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_cpf"
                android:layout_marginTop="15dp"
                android:background="@drawable/textbox"
                android:fontFamily="@font/regular"
                android:hint="Senha"
                android:inputType="textPassword"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_password_employee"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_blue"
                android:backgroundTint="@color/clear_blue"
                android:fontFamily="@font/bold"
                android:padding="10dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"/>


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>